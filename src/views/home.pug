doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Noom
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body 
        header 
            h1 Noom
        main
            div#welcome
                form
                    input(placeholder="Room Name", required, type="text")
                    button Enter Room
            div#nickname
                form
                    input(placeholder="Nickname", required, type="text")
                    button Save
            div#call
                button#exit Exit Room 
                div#myStream
                    h4#myname
                    video#myFace(autoplay, playsinline, width="400", height="300")
                    button#mute Mute
                    button#camera Turn Camera Off
                    select#cameras
                h3 Chat
                ul
                form#msg
                    input(placeholder="message", required, type='text')
                    button Send
                video#peerFace(autoplay, playsinline, width="400", height="300")
        //- install socket in the frontend
        script(src="/socket.io/socket.io.js")
        script(src="/public/js/app.js")